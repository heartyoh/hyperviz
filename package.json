{
  "name": "hyperviz",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build --stream",
    "test": "jest",
    "clean": "rimraf ./{services,packages,webcomponents,apps}/*/dist ./{services,packages,webcomponents,apps}/**/*.buildinfo ./{services,packages,webcomponents,apps}/dist/*/*.{d.ts,js,esnext,mjs} .sewing-kit",
    "build:clean": "rm yarn.lock || echo 'yarn.lock not found.' && yarn clean && yarn install && yarn build",
    "release": "lerna publish",
    "release-beta": "lerna publish --dist-tag beta",
    "release:force": "lerna publish --force-publish=*"
  },
  "devDependencies": {
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "http-server": "^14.1.1",
    "lerna": "^8.2.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
